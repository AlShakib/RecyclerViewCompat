<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RecyclerViewCompat" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/highEmphasis</item>
    </style>

    <style name="Theme.RecyclerViewCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecyclerViewCompat.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Theme.RecyclerViewCompat.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.RecyclerViewCompat.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.RecyclerViewCompat.OverFlowButton" parent="Theme.RecyclerViewCompat.IconOnly" >
        <item name="iconTint">@color/mediumEmphasis</item>
        <item name="android:textColor">@color/mediumEmphasis</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>
</resources>